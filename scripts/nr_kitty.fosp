bool d_IsDefaultDude(Critter&player,Critter@kitty)
{
	return player.Stat[(71)]==(0)&&(player.Stat[(112)]==0||player.Stat[(112)]==((11)));
}

bool d_IsLongHairDude(Critter&player,Critter@kitty)
{
	return player.Stat[(71)]==(0)&&player.Stat[(112)]==(106);
}

void r_HaircutToLongHairDude(Critter&player,Critter@tray)
{
	FlushScreen(player,false,500);
	FlushScreen(player,true,5000);
	
	if(GetCritterAnimType(player.CrType)!=(1))
	{
		Item@armor=player.GetItem(0,(3));
		if((@armor!=null))
		player.MoveItem(armor.Id,0,(0));
		player.ChangeCrType((106));
		player.StatBase[(112)]=(106);
		if((@armor!=null))
		player.MoveItem(armor.Id,0,(3));
	}
	else
	{  
		
	}
}

