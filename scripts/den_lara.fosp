{
	lara.SetEvent((38),"_EventBarter");
}   

bool _EventBarter(Critter&lara,Critter&player,bool attach,uint barterCount)
{
	GameVar@loyality=GetUnicumVar((2010),lara.Id,player.Id);
	if(not(@loyality!=null)||loyality<5)
	return false;
	else
	return true;
}
