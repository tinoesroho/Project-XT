                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                

void _DustyInit(Critter&dusty,bool firstTime)
{
	dusty.ModeBase[(512)]=0;
	dusty.ModeBase[(511)]=1;
	dusty.StatBase[(115)]=5;
	dusty.SetEvent((1),"_DustyFinish");
	if(firstTime)
	{
		dusty.StatBase[(90)]=CreateTimeEvent(__FullSecond+60*60,"e_OneHour",true);
		dusty.StatBase[(91)]=CreateTimeEvent(__FullSecond+7*24*60*60,"e_OneWeek",true);
	}
}

void _DustyFinish(Critter&dusty,bool deleted)
{
	if(deleted)
	{
		EraseTimeEvent(dusty.StatBase[(90)]);
		EraseTimeEvent(dusty.StatBase[(91)]);
	}
}

uint e_OneHour(uint[]@values)
{
	GameVar@rotgut=GetGlobalVar((4201));
	GameVar@beer=GetGlobalVar((4202));
	if(rotgut>=20&&beer>=20)
	{
		GameVar@party=GetGlobalVar((4200));
		party=2;
	}
	return 60*60;
}

uint e_OneWeek(uint[]@values)
{
	GameVar@rotgut=GetGlobalVar((4201));
	GameVar@beer=GetGlobalVar((4202));
	GameVar@party=GetGlobalVar((4200));
	rotgut=0;
	beer=0;
	party=0;
	return 7*24*60*60;
}
