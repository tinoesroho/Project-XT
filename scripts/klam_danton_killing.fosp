{
	Critter@danton=map.GetNpc((210),(0x0F),0);
	if(not(@danton!=null))
	{
		Log("ERROR: critter not valid");
		return;
	}
	danton.SetEvent((2),"_DantonDead");
	danton.ModeBase[(533)]=1;
}

void _DantonDead(Critter&danton,Critter@player)
{
	if(not(@player!=null))
	return;
	if(player.IsNpc())
	return;
	
	GameVar@var=GetLocalVar((3215),player.Id);
	if(not(@var!=null))
	{
		Log("ERROR: not valid GameVar â„–"+(3215));
		return;
	}
	if(var!=1)
	return;
	
	var=2;
	danton.EraseEnemyFromStack(player.Id);
}
