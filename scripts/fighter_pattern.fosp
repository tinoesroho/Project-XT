	void InitPattern(Critter&cr)
	{
		cr.ShowCritterDist1=this.AttackDist;
		
		cr.StatBase[(95)]=this.AllyAssistRadius;
		cr.StatBase[(96)]=this.AssistAlliesNum;
		cr.StatBase[(97)]=this.MustHealLvl;
