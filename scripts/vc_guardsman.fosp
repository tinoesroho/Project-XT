bool d_CheckWear(Critter&player,Critter@npc,int pid,int count,int deteriorationPercent)
{
	if(count==0)
	return false;
	Item@item;
	Item@[]items;
	if(player.GetItems(-1,items)==0)
	return false;
	int num=0;
	for(uint i=0,l=items.length();i<l;i++)
	{
