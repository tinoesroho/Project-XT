{
	map.SetEvent((6),"_MapInCritter");
}

void _MapInCritter(Map&map,Critter&cr)
{
	if(cr.IsPlayer()&&cr.Karma[(496)]>1)
	cr.AddTimeEvent("cte_NpcReact",((20)*__TimeMultiplier),0);
}

uint cte_NpcReact(Critter&cr,int identifier,uint&rate)
{
	Map@map=cr.GetMap();
	if(!(@map!=null)||map.GetProtoId()!=(34))
	return 0;
	Critter@[]critters;
	if(map.GetCrittersHex(cr.HexX,cr.HexY,(10),(0x01)|(0x20),critters)>0)
	{
		Critter@npc=critters[0];
		if((@npc!=null)&&(npc.Stat[(67)]==(0)||npc.Stat[(67)]==(1)||npc.Stat[(67)]==(2)))
		npc.SayMsg((1),(0),(5905));
	}
	return((20)*__TimeMultiplier);
} 

void r_DelayKarma(Critter&player,Critter@npc)
{
	player.AddTimeEvent("cte_IncKarma",((8)*__TimeMultiplier*3600),0);
}

uint cte_IncKarma(Critter&cr,int identifier,uint&rate)
{
	cr.KarmaBase[(496)]=2;
	return 0;
}
