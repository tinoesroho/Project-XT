	CaravanInfo@crv=_GetCaravan(npc.StatBase[(90)]);
	if(!(@crv!=null))
	{
		Log("Error: CaravanInfo not found. Id = "+npc.StatBase[(90)]);
		return;
	}
	if(crv.CaravanStatus!=(4))
	return;
	if(d_HasPlayerRequest(player,npc))
	{
		_ContinueCaravan(npc);
	}
} 

