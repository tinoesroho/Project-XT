			{uint q1=GetQuestState(guard,ci.CaravanId);if(q1==(2)||q1==(9)) SetQuestState(guard,ci.CaravanId,(4));};
			continue;
		}
		
		caravanGroup.insertLast(@guard);
	}
	for(uint j=0;j<deadGuardIds.length();j++)
